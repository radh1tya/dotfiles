set nocompatible
filetype plugin indent on
syntax on

set tabstop=8
set shiftwidth=8
set noexpandtab
set autoindent
set smartindent

set textwidth=79
set colorcolumn=80
highlight ColorColumn ctermbg=lightgrey guibg=lightgrey

set cindent
set cinoptions=:0,g0,(0

set ruler
set number
set showmatch
set list
set listchars=tab:>-,trail:~

set formatoptions-=r
set comments=sO:*\ -,mO:*\ \ ,exO:*/,s1:/*,mb:*,ex:*/

set backspace=indent,eol,start
set encoding=utf-8
set nohlsearch
